DESTINATION_API_URL=https://webhook.site/your-webhook-url
MAX_RETRIES=3
RETRY_DELAY=1.0

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60  # seconds