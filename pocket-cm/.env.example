# Application Settings
DEBUG=false
APP_NAME="Pocket CM AI Onboarding Agent"
APP_VERSION="1.0.0"

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# OpenAI Settings (for AI extraction)
OPENAI_API_KEY=your_openai_api_key_here
